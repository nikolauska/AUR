  "mcp-proxy-x86_64-${pgkver}-unknown-linux-gnu.tar.gz::https://github.com/tidewave-ai/mcp_proxy_rust/releases/download/v${pkgver}/mcp-proxy-x86_64-unknown-linux-gnu.tar.gz"
)
